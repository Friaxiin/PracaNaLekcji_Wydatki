<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracaNaLekcji_Wydatki.MainPage">

    <ContentPage Title="Dodaj wydatki">
        <StackLayout>
            <Label Text="Tutaj możesz zapisać swoje wydatki"/>

            <Label Text="Nazwa wydatku"/>
            <Entry x:Name="nameEntry"/>

            <Label Text="Kwota wydatku"/>
            <Entry x:Name="valueEntry"/>

            <Label Text="Data wydatku"/>
            <DatePicker x:Name="datePicker"/>

            <Button Text="Dodaj wydatek" BackgroundColor="Transparent" BorderColor="Black" BorderWidth="2"/>
        </StackLayout>
    </ContentPage>

    <ContentPage Title="Twoje wydatki">
        <StackLayout>
            <ListView x:Name="ExpenseList" ItemTapped="DetailsPage">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage>

</TabbedPage>
